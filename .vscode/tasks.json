{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Dev Environment",
            "dependsOn": ["MHA.Start"],
            "options": {
                "statusbar": {
                    "color": "#ff0"
                }
            }
        },
        {
            "label": "Build",
            "dependsOn": ["MHA.Build"],
            "options": {
                "statusbar": {
                    "color": "#0084ff"
                }
            }
        },
        {
            "label": "Run",
            "dependsOn": ["MHA.Build"],
            "type": "shell",
            "command": "serve -s build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "group": "RUN"
            },
            "options": {
                "cwd": "${workspaceFolder}/apps/my-healthy-advantage",
                "statusbar": {
                    "color": "#0f0"
                }
            }
        },
        {
            "label": "MHA.Start",
            "type": "shell",
            "command": "npm start",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "group": "UI"
            },
            "options": {
                "cwd": "${workspaceFolder}/apps/my-healthy-advantage",
                "statusbar": {
                    "hide": true,
                }
            }
        },
        {
            "label": "MHA.Build",
            "type": "shell",
            "command": "npm run build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "BUILD"
            },
            "options": {
                "cwd": "${workspaceFolder}/apps/my-healthy-advantage",
                "statusbar": {
                    "hide": true
                }
            }
        }
    ]
}